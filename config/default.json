{
  "crypto": {
    "hash": {
      "length": 36,
      "iterations": 100000,
      "algorithm": "sha256"
    }
  },
  "validation": {
    "username": "^[^._\\W\\d][a-zA-Z0-9.]{0,30}[^._\\W]$",
    "email":
      "^(([^<>()[\\]\\.,;:\\s@\"]+(\\.[^<>()[\\]\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$",
    "password": "^\\S{6,30}$",
    "firstName": "^[^-\\W\\d][a-zA-Z-]{0,30}[^-\\W\\d]$",
    "lastName": "^[^-\\W\\d][a-zA-Z-]{0,30}[^-\\W\\d]$"
  },
  "dbUrl": "mongodb://localhost/app"
}
